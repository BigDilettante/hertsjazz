<% page_title "Choose a season from the archive" %>
<% meta_tag :description,  "Choose a season from the archive" %>

<div class="text-center" id="season_list">
	<form id="season-form" action="/seasons" method="get">
		<%= token_tag %>
	  <h1 class="h3 mb-3 font-weight-normal">Choose a season from the archive</h1>
	  <label for="season" class="sr-only">Email address</label>
	  <select name="season" id="season" class="form-control">
	  	<% @seasons.each do |season| %>
	  		<option value="<%= season.id %>"><%= season.name %> <%= season.year %></option>
	  	<% end %>
	  </select>
	  <button class="btn btn-lg btn-primary btn-block" type="submit">Go ></button>
	</form>
</div>
