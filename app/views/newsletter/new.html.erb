<div class="text-center">
	<form id="newsletter-form" action="/newsletter" method="post">
		<% if notice %>
		  <p class="alert alert-success"><%= notice %></p>
		<% end %>
		<% if alert %>
		  <p class="alert alert-danger"><%= alert %></p>
		<% end %>
		<%= token_tag %>
	  <h1 class="h3 mb-3 font-weight-normal">Sign up to our email list</h1>
	  <label for="email" class="sr-only">Email address</label>
	  <input name="email" type="email" id="email" class="form-control" placeholder="Email address" required="" autofocus="">
	  <button class="btn btn-lg btn-primary btn-block" type="submit">Sign up</button>
	</form>
</div>